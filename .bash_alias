# .bash_alias

# ----------------------------------------------------------------------
# Terminal
# ----------------------------------------------------------------------
alias cl='clear'

# ----------------------------------------------------------------------
# Safety
# ----------------------------------------------------------------------
alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'
set -o noclobber

# ----------------------------------------------------------------------
# Directory
# ----------------------------------------------------------------------
alias ..='cd ..'
alias ...='..;..'
alias md='mkdir -p'
alias dir='ls -d -1 $PWD/*/'

# ----------------------------------------------------------------------
# Files
# ----------------------------------------------------------------------
alias files='ls -d -1 $PWD/*.*'

# ----------------------------------------------------------------------
# Listing
# ----------------------------------------------------------------------
alias la="ls -lFart --color"
alias lc="ls -CF"
alias lo='ls --color=auto --format=long'
alias lf='ls -lFaS'
alias lt='tree -A -C -L 2'

# ----------------------------------------------------------------------
# Beautification
# ----------------------------------------------------------------------
alias pretty-du='du -ch --max-depth=1 | sort'
alias pretty-passwd="grep -o '^[^:]*' /etc/passwd | sort"
alias pretty-group="grep -o '^[^:]*' /etc/group | sort"
alias pretty-rpm='rpm -qa --queryformat="%{NAME}\n" | sort'

# ----------------------------------------------------------------------
# Grep
# ----------------------------------------------------------------------
alias grep='/usr/bin/grep --color=auto'
