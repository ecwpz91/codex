# .bash_alias

alias ..='cd ..'
alias ...='..;..'
alias cl='clear'
alias cp='cp -i'
alias du='du -ch --max-depth=1'
alias grep='grep --color=auto'
alias ls='ls --classify --color=auto'
alias la='ls -A'
alias lc='ls -C'
alias ll='ls --format=long'
alias lsgroups="grep -o '^[^:]*' /etc/group | sort -d"
alias md='mkdir -p'
alias mv='mv -i'
alias rm='rm -i'

if type rlwrap &>/dev/null; then
 [ "$NODE_NO_READLINE" = '1' ] && alias rl_node="rlwrap node"
fi

alias rpmqa='rpm -qa --queryformat="%{NAME}\n" | sort -d'

if type tree &>/dev/null; then
 alias treeacl='tree -A -C -L 2'
fi
