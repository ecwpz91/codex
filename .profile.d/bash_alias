alias ..='cd ..'
alias ...='..;..'
alias cl='clear'
alias cp='cp -i'
alias du='du -ch --max-depth=1'
alias grep='grep --color=auto'
alias ls='ls --classify --color=auto'
alias la='ls -A'
alias lc='ls -C'
alias ll='ls --format=long'
alias lsgroups="grep -o '^[^:]*' /etc/group | sort -d"
alias md='mkdir -p'
alias mv='mv -i'
alias rm='rm -i'
alias tree='tree -A -C'
alias stat="stat --format='%A:%a %U:%u %G:%g %C %n'"
